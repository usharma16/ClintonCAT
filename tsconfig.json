{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES6",
        "lib": ["DOM", "ES6"],
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true
    },
    "exclude": ["jest.config.ts"]
}
